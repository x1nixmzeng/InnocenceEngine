// shadertype=glsl
#version 400 core
layout (location = 0) in vec3 in_Position;

out vec3 TexCoords;
out mat4 inv_p;
out mat4 inv_v;

uniform mat4 uni_p;
uniform mat4 uni_r;

void main()
{
    TexCoords = in_Position * -1.0;
    vec4 pos = uni_p * uni_r * -1.0 * vec4(in_Position, 1.0);
    inv_p = inverse(uni_p);
    inv_v = inverse(uni_r);
    gl_Position = pos.xyww;
}